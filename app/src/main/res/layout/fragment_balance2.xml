<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_balance2_data"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textIsSelectable="true"
            android:id="@+id/et_balance2_data"
            android:layout_weight="4"
            android:textSize="20dp"
            android:hint="Data do balance" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grass_darker"
        android:padding="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_balance2_elemento_cabecera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/tx_elemento"
            android:textSize="12dp"
            android:textColor="#EBB90C" />

        <TextView
            android:id="@+id/tv_balance2_custo_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Total"
            android:textSize="12dp"
            android:textColor="#EBB90C" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/balanceList2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>