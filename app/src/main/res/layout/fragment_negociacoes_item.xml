<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/snow_light"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="8dp"
            android:layout_weight="11.50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:layout_weight="8"
                android:orientation="horizontal" >


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="7dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tv_cpf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="15dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_nome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="15dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_tipo_local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="15dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="15dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_producto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="15dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_taxa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="15dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_valor_negociado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="15dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_data_pagamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="15dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_data_cadastro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="15dp"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.7"
                        android:layout_gravity="right"
                        android:id="@+id/iv_negociacoes_list"
                        android:src="@mipmap/ic_dots_vertical_grey600_48dp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


