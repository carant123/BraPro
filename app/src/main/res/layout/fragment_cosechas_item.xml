<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal" >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/iv_cosecha"
                android:src="@mipmap/sprout_cosecha64x64" />

            <TextView
                android:id="@+id/tv_nome_cosecha"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="8"
                android:text="Nombre"
                android:textSize="15dp"
                android:textColor="#000000" />

<!--            <Button
                android:text="D"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/bt_cosechas_item_delete" />-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.7"
                android:id="@+id/iv_cosecha_list"
                android:src="@mipmap/ic_dots_vertical_grey600_24dp" />



        </LinearLayout>

    </TableRow>
</TableLayout>